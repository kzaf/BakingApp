<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60sp"
    android:layout_margin="1sp"
    android:layout_weight="1"
    android:padding="@dimen/steps_item_card_padding"
    app:cardCornerRadius="@dimen/steps_item_card_radius">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/steps_item_layout_margin"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/step_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="@dimen/steps_item_step_number_padding"
            android:text="1"
            android:textSize="@dimen/steps_item_step_number_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/step_descrpition_short"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/steps_item_description_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/steps_item_short_description_text"
            android:textSize="@dimen/steps_item_short_description_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_image_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_weight="1"
            app:srcCompat="@drawable/arrow_image" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="@dimen/steps_item_image_padding"
            app:srcCompat="@drawable/arrow" />
    </LinearLayout>
</android.support.v7.widget.CardView>