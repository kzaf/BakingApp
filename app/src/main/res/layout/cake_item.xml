<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cake_item_layout_height"
    android:layout_marginStart="@dimen/cake_item_layout_margin"
    android:layout_marginLeft="@dimen/cake_item_layout_margin"
    android:layout_marginTop="@dimen/cake_item_layout_margin"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_conversion_wrapHeight="762"
    tools:layout_conversion_wrapWidth="1054">

    <ImageView
        android:id="@+id/cakeCardImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/cake_item_layout_margin"
        android:scaleType="fitXY"
        android:src="@drawable/cake_card_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cakeCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cake_card_name_margin"
        android:layout_marginRight="@dimen/cake_card_name_margin"
        android:layout_marginBottom="@dimen/cake_card_name_margin_bottom"
        android:background="#80000000"
        android:gravity="left"
        android:paddingLeft="@dimen/cake_card_name_padding_left"
        android:paddingTop="@dimen/cake_card_name_padding"
        android:paddingBottom="@dimen/cake_card_name_padding"
        android:text="@string/cake_name_card"
        android:textColor="@android:color/white"
        android:textSize="@dimen/cake_card_item_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>